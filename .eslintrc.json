{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
    	"semi": ["error", "always"],
	"quotes": ["error", "double"],
	"no-useless-return": ["error"],
	"strict": ["error", "always"],
	"default-case": ["error", "always"],
	"yoda": ["error", "always"],
	"no-console": ["error", "always"]
    }
}
